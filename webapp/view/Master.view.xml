<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:fb="sap.ui.comp.filterbar"
	controllerName="at.clouddna.training00.UI5Foundations.controller.Master" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page id="master_page" title="{i18n>master.title}">
		<content>
			<fb:FilterBar id="master_filterbar" search="onTableFilter">
				<fb:filterGroupItems>
					<fb:FilterGroupItem groupName="customer" name="firstname" label="{i18n>app.firstname}" visibleInFilterBar="true">
						<fb:control>
							<Input/>
						</fb:control>
					</fb:FilterGroupItem>
					<fb:FilterGroupItem groupName="customer" name="lastname" label="{i18n>app.lastname}" visibleInFilterBar="true">
						<fb:control>
							<Input/>
						</fb:control>
					</fb:FilterGroupItem>
					<fb:FilterGroupItem groupName="customer" name="gender" label="{i18n>app.gender}" visibleInFilterBar="true">
						<fb:control>
							<Select id="master_filterbar_select" items="{GenderModel>/Geschlechter}">
								<items>
									<core:Item key="{GenderModel>value}" text="{GenderModel>text}"/>
								</items>
							</Select>
						</fb:control>
					</fb:FilterGroupItem>
					<fb:FilterGroupItem groupName="customer" name="email" label="{i18n>app.email}" visibleInFilterBar="true">
						<fb:control>
							<Input/>
						</fb:control>
					</fb:FilterGroupItem>
				</fb:filterGroupItems>
			</fb:FilterBar>
			<Table id="master_table" items="{/CustomerSet}">
				<headerToolbar>
					<Toolbar>
						<content>
							<Title text="{i18n>master.table.title}" level="H2"/>
							<ToolbarSpacer/>
							<Button id="master_button_create" text="{i18n>button.add}" press="onNewCustomerPress"/>
							<Button id="master_button_sort" icon="sap-icon://sort" press="onTableSortPress"/>
						</content>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column id="master_column_customerid">
						<Text text="{i18n>app.customerid}"/>
					</Column>
					<Column id="master_column_firstname">
						<Text text="{i18n>app.firstname}"/>
					</Column>
					<Column id="master_column_lastname">
						<Text text="{i18n>app.lastname}"/>
					</Column>
					<Column id="master_column_title">
						<Text text="{i18n>app.title}"/>
					</Column>
					<Column id="master_column_gender">
						<Text text="{i18n>app.gender}"/>
					</Column>
					<Column id="master_column_email">
						<Text text="{i18n>app.email}"/>
					</Column>
					<Column id="master_column_phone">
						<Text text="{i18n>app.phone}"/>
					</Column>
					<Column id="master_column_website">
						<Text text="{i18n>app.website}"/>
					</Column>
					<Column id="master_column_delete">
						<Text text="{i18n>app.delete}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Navigation" press="onCustomerPress">
						<cells>
							<ObjectIdentifier title="{CustomerId}"/>
							<Text text="{Firstname}"/>
							<Text text="{Lastname}"/>
							<Text text="{AcademicTitle}"/>
							<Text text="{Gender}"/>
							<Text text="{Email}"/>
							<Text text="{Phone}"/>
							<Link text="{Website}" href="https://{Website}" target="_blank"/>
							<Button press="onDeleteCustomerPress" icon="sap-icon://delete"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>